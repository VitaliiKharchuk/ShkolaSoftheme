<Window x:Class="GeneringNumbers.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GeneringNumbers"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="5*" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>


		<TextBlock  Grid.Row="0" Grid.Column="0" HorizontalAlignment="Stretch"  VerticalAlignment="Center" Text="Guess generated number from range [1: 10]"   FontSize="22"/>
		<TextBox x:Name="_guessedNumber" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="80" FontSize="18" />
		<Button x:Name="_submit" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Calculate" FontSize="18" Click= "_submit_Click" Width="80" />



	</Grid>
</Window>
